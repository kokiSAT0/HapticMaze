{
  "cli": {
    "version": ">= 3.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "ANDROID_ADMOB_APP_ID": "${ANDROID_ADMOB_APP_ID}",
        "IOS_ADMOB_APP_ID": "${IOS_ADMOB_APP_ID}"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": false
      },
      "env": {
        "ANDROID_ADMOB_APP_ID": "${ANDROID_ADMOB_APP_ID}",
        "IOS_ADMOB_APP_ID": "${IOS_ADMOB_APP_ID}"
      }
    }
  }
}
